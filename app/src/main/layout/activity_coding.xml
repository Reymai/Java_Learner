<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CodingActivity">

    <ImageButton
        android:id="@+id/RunButton"
        android:layout_width="120"
        android:layout_height="80"
        android:backgroundTint="#00FFFFFF"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.054"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.975"
        app:srcCompat="@drawable/codingrun" />

    <ImageButton
        android:id="@+id/BackButton"
        android:layout_width="120"
        android:layout_height="80"
        android:backgroundTint="#00FFFFFF"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.945"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.975"
        app:srcCompat="@drawable/codingbb" />

    <ImageButton
        android:id="@+id/QuestButton"
        android:layout_width="120"
        android:layout_height="80"
        android:backgroundTint="#00FFFFFF"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/BackButton"
        app:layout_constraintStart_toEndOf="@+id/RunButton"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.975"
        app:srcCompat="@drawable/codingquset" />

    <ImageView
        android:id="@+id/CodingBG"
        android:layout_width="405"
        android:layout_height="550dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.011"
        app:srcCompat="@drawable/codinglog" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView2"
        android:layout_width="390dp"
        android:layout_height="525dp"
        app:layout_constraintBottom_toBottomOf="@+id/CodingBG"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/CodingBG"
        app:layout_constraintTop_toTopOf="@+id/CodingBG" />

    <ImageView
        android:id="@+id/AccesBg"
        android:layout_width="380"
        android:layout_height="65"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.515"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/CodingBG"
        app:layout_constraintVertical_bias="0.851"
        app:srcCompat="@drawable/Fastacces" />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="367dp"
        android:layout_height="51dp"
        android:scrollbars="horizontal"
        app:layout_constraintBottom_toBottomOf="@+id/AccesBg"
        app:layout_constraintEnd_toEndOf="@+id/AccesBg"
        app:layout_constraintStart_toStartOf="@+id/AccesBg"
        app:layout_constraintTop_toTopOf="@+id/AccesBg" />

</androidx.constraintlayout.widget.ConstraintLayout>